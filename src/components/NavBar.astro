---
import gruponec from "../assets/Logos/lastlogo.png";

// Array para los enlaces de navegación
const navLinks = [
  { href: "/#ctg-product", label: "Productos" },
  { href: "/#soluciones", label: "Soluciones" },
  { href: "/nosotros", label: "Nosotros" },
  { href: "/clientes", label: "Clientes" },
  { href: "/contacto", label: "Contacto" }
];
---
<div class="bg-[#192855] lg:h-[6vh] h-[5vh]">
  <ul class="flex w-full justify-center items-center gap-8 h-full text-[#fff] text-xs lg:text-sm 2xl:text-2xl">
    <li><a href="mailto:ventas@gruponec.net" target="_blank" class="hover:text-[#F7D2A9]">Contacto: ventas@gruponec.net</a></li>
    <li><a href="https://wa.me/51945046267?text=Hola,%20me%20interesa%20más%20información." target="_blank" class="hover:text-[#F7D2A9]">Teléfono: +51 945 046 267</a></li>
  </ul>
</div>
<nav class="bg-slate-100 p-4 lg:h-[15vh] h-[10vh]">
  <div class="w-full mx-auto 2xl:mx-0 2xl:w-full flex justify-between items-center h-full">
    <!-- Logo -->
    <div class="lg:h-16 h-10 2xl:h-24">
      <a href="/">
        <img src={gruponec.src} alt="Grupo Nec Logo" class="h-full" />
      </a>
    </div>

    <!-- Botón del menú hamburguesa -->
    <button id="menu-btn" class="text-[#192855] block lg:hidden focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="w-8 h-8">
        <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h22M5 16h22M5 24h22" />
      </svg>
    </button>

    <!-- Menú en pantallas grandes -->
    <div class="hidden lg:flex space-x-6 h-8">
      {navLinks.map(link => (
        <a href={link.href} class="text-[#192855] hover:border-b-2 border-[#000b42] text-lg lg:text-xl 2xl:text-3xl">
          {link.label}
        </a>
      ))}
    </div>
  </div>

  <!-- Menú desplegable para pantallas móviles -->
  <div id="mobile-menu" class="fixed inset-0 bg-slate-100 opacity-0 max-h-0 lg:hidden transition-all duration-500 ease-in-out z-50 overflow-hidden">
    <button id="close-btn" class="absolute top-4 right-4 text-[#000b42] focus:outline-none">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-8 h-8">
        <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <div class="flex flex-col items-center justify-center h-full space-y-4">
      {navLinks.map(link => (
        <a href={link.href} class="text-[#000b42] hover:bg-slate-300 p-3 rounded-2xl text-2xl md:text-lg">
          {link.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenu = document.getElementById('mobile-menu');
    const menuBtn = document.getElementById('menu-btn');
    const closeBtn = document.getElementById('close-btn');

    const toggleMenu = () => {
      mobileMenu.classList.toggle('max-h-0');
      mobileMenu.classList.toggle('opacity-0');
      document.body.style.overflow = mobileMenu.classList.contains('max-h-0') ? 'auto' : 'hidden';
    };

    menuBtn.onclick = toggleMenu;
    closeBtn.onclick = toggleMenu;

    window.onscroll = () => {
      if (!mobileMenu.classList.contains('max-h-0')) {
        mobileMenu.classList.add('max-h-0', 'opacity-0');
        document.body.style.overflow = 'auto';
      }
    };
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
