---
import LogoGN from "../assets/Logos/ultimoLogoGN.png";
---

<nav class="bg-slate-100 p-4">
    <div class="container mx-auto flex justify-between items-center h-full">
      <div class="lg:h-16 h-10">
        <a href="/">
          <img src={LogoGN.src} alt="" class="h-full" />
        </a>
      </div>
  
      <!-- Botón del menú hamburguesa -->
      <button id="menu-btn" class="text-black block lg:hidden focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 32 32" class="w-8 h-8">
          <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h22M5 16h22M5 24h22" />
        </svg>
      </button>
  
      <!-- Menú normal en pantallas grandes -->
      <div class="hidden lg:flex space-x-6 h-8">
        {["/#ctg-product", "/#soluciones", "/nosotros", "/clientes", "/contacto"].map((href, index) => (
          <a href={href} class={`text-[#000] hover:border-b-2 border-[#000b42] text-lg 2xl:text-3xl`}>
            {["Productos", "Soluciones", "Nosotros", "Clientes", "Contacto"][index]}
          </a>
        ))}
      </div>
    </div>
  
    <!-- Menú desplegable en pantallas móviles -->
    <div id="mobile-menu" class="fixed inset-0 bg-slate-100 opacity-0 max-h-0 lg:hidden transition-all duration-500 ease-in-out z-50 overflow-hidden">
      <button id="close-btn" class="absolute top-4 right-4 text-[#000b42] focus:outline-none">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" class="w-8 h-8">
          <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      <div class="flex flex-col items-center justify-center h-full space-y-4 md:space-x-1">
        {["/#ctg-product", "/#soluciones", "/nosotros", "/clientes", "/contacto"].map((href, index) => (
          <a href={href} class={`text-[#000b42] hover:bg-slate-300 p-3 md:py-1 md:px-3 rounded-2xl text-2xl md:text-lg`}>
            {["Productos", "Soluciones", "Nosotros", "Clientes", "Contacto"][index]}
          </a>
        ))}
      </div>
    </div>
  </nav>
  
  <script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
      const mobileMenu = document.getElementById('mobile-menu');
      document.getElementById('menu-btn').onclick = () => {
        mobileMenu.classList.toggle('max-h-0');
        mobileMenu.classList.toggle('opacity-0');
        document.body.style.overflow = mobileMenu.classList.contains('max-h-0') ? 'auto' : 'hidden';
      };
      document.getElementById('close-btn').onclick = () => mobileMenu.classList.toggle('max-h-0') && mobileMenu.classList.toggle('opacity-0') && (document.body.style.overflow = 'auto');
      window.onscroll = () => {
        if (!mobileMenu.classList.contains('max-h-0')) {
          mobileMenu.classList.add('max-h-0', 'opacity-0');
          document.body.style.overflow = 'auto';
        }
      };
    });
  </script>
  
  <style>
    html {
      scroll-behavior: smooth;
    }
  </style>
  
