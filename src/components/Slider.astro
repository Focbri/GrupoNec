---
import sliderL1 from "../assets/Slider/sld1.jpg";
import sliderL2 from "../assets/Slider/sld2.jpg";
import sliderL3 from "../assets/Slider/sld3.jpg";
import fondo1 from "../assets/Slider/fondo-slider.png";
import ciscofondo from "../assets/Slider/ciscoswitch.png";
---

<div class="relative">
  <swiper-container navigation="true" loop="true" autoplay autoplay-delay="6000" class="w-full lg:h-[85vh]">
    <swiper-slide class="relative">
      <div class="w-full flex lg:flex-row flex-col-reverse">
        <div class="lg:w-2/4 bg-[#192855] text-[#fff] flex justify-center  flex-col p-4 lg:p-6 gap-4">
          <div class="w-full">
            <h2 class="lg:text-6xl text-2xl text-center lg:text-left">Revoluciona tu infraestructura con los switches Cisco C9300</h2>
          </div>
          <div class="w-full lg:block hidden">
            <p class="lg:text-xl">Conectividad inteligente, velocidad sin límites y seguridad para el futuro</p>
          </div>
          <div class="w-full lg:flex flex justify-center items-center lg:mt-4">
            <button class="w-auto bg-[#fff] text-[#192855] lg:p-4 p-3 rounded-3xl hover:bg-slate-300"><a href="">Productos en Liquidación</a></button>
          </div>
        </div>
        <div class="lg:w-2/4">
          <img src={ciscofondo.src} class="block lg:hidden w-full" /><img src={ciscofondo.src} class="hidden lg:block w-full" />
        </div>
      </div>
    </swiper-slide>
    <!--
    <swiper-slide>
      <a href="/"><img src={sliderL2.src} class="block lg:hidden w-full" /><img src={sliderL2.src} class="hidden lg:block hw-full" /></a>
    </swiper-slide>
    <swiper-slide>
      <a href="/"><img src={sliderL3.src} class="block lg:hidden w-full" /><img src={sliderL3.src} class="hidden lg:block hw-full" /></a>
    </swiper-slide>
    -->
  </swiper-container>
</div>

<script>
  import { register } from "swiper/element/bundle";
  register();
</script>