---
import sliderL1 from "../assets/Slider/sld1.jpg";
import sliderL2 from "../assets/Slider/sld2.jpg";
import sliderL3 from "../assets/Slider/sld3.jpg";
import ciscofondo from "../assets/Slider/ciscoswitch.png";
---

<div class="relative lg:h-[85vh]">
  <swiper-container navigation="true" loop="true" autoplay-delay="6000" class="w-full">
    <swiper-slide class="relative">
      <div class="flex flex-col-reverse lg:flex-row">
        <div class="lg:w-1/2 bg-[#192855] text-white flex flex-col justify-center p-4 lg:p-6 gap-4">
          <h2 class="text-2xl lg:text-6xl text-center lg:text-left">
            Revoluciona tu infraestructura con los switches Cisco C9300
          </h2>
          <p class="hidden lg:block text-lg">
            Conectividad inteligente, velocidad sin límites y seguridad para el futuro
          </p>
          <div class="flex justify-center lg:justify-start mt-4">
            <a href="/productos/liquidacion" class="bg-white text-[#192855] p-3 lg:p-4 rounded-3xl hover:bg-slate-300">
              Productos en Liquidación
            </a>
          </div>
        </div>
        <div class="lg:w-1/2">
          <picture>
            <source srcset={ciscofondo.src} media="(min-width: 1024px)" />
            <img src={ciscofondo.src} class="w-full" alt="Cisco Switch" />
          </picture>
        </div>
      </div>
    </swiper-slide>

    <!-- Ejemplo de otros slides (comentados para simplicidad) -->
    <!--
    <swiper-slide>
      <a href="/"><img src={sliderL2.src} class="w-full" /></a>
    </swiper-slide>
    <swiper-slide>
      <a href="/"><img src={sliderL3.src} class="w-full" /></a>
    </swiper-slide>
    -->
  </swiper-container>
</div>

<script>
  import { register } from "swiper/element/bundle";
  register();
</script>
