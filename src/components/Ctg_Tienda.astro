                <li class="lg:w-[50%] w-[80%]"><a href="" class="flex justify-center"><img src={switches.src} alt="" class="border hover:shadow-2xl rounded-lg"></a></li>
            </ul>
        </div>
    </div>

    <!------------------CTG EQUIPOS DE COMPUTO------ -->
