import muniLima from "../../assets/Clientes/municipalidadLima.png";
---

<Layout title="Clientes">
    <section class="bg-[#fff] w-full h-full flex justify-center items-center flex-col py-12 relative overflow-hidden">
        <div class="lg:block hidden w-full h-full absolute">
            <img src={iconCir.src} alt="" class="top-96 left-4 absolute">
            <img src={iconX.src} alt="" class="bottom-96 left-4 absolute">
            <img src={iconTRI.src} alt="" class="top-96 right-4 absolute">
            <img src={iconPIRA.src} alt="" class="bottom-96 right-4 absolute">
            <img src={iconCUAD.src} alt="" class="bottom-6 right-12 absolute">
            <img src={iconNODO.src} alt="" class="bottom-6 left-12 absolute">
        </div>
        <div class="w-[90%] lg:text-3xl text-lg bg-[#192855] lg:p-4 p-2 text-[#fff] rounded">
            <h3>La confianza de nuestros clientes es el respaldo de nuestras soluciones</h3>
        </div>
        <div class="w-[90%] grid lg:grid-cols-5 grid-cols-3 gap-2 py-10">
            <img src={clinicaI.src} alt="HP" class="border hover:shadow-2xl rounded-lg lg:grayscale grayscale-0 lg:hover:grayscale-0"/>
            <img src={bbva.src} alt="HP" class="border hover:shadow-2xl rounded-lg lg:grayscale grayscale-0 lg:hover:grayscale-0"/>
