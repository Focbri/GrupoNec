            <img src={miningS.src} alt="HP" class="border hover:shadow-2xl rounded-lg lg:grayscale grayscale-0 lg:hover:grayscale-0"/>
            <img src={granhaM.src} alt="HP" class="border hover:shadow-2xl rounded-lg lg:grayscale grayscale-0 lg:hover:grayscale-0"/>
            <img src={auna.src} alt="HP" class="border hover:shadow-2xl rounded-lg lg:grayscale grayscale-0 lg:hover:grayscale-0"/>
            <img src={ferrocarrilCA.src} alt="HP" class="border hover:shadow-2xl rounded-lg lg:grayscale grayscale-0 lg:hover:grayscale-0"/>
