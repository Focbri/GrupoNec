import iconPIRA from "../../assets/iconos/iconPIRA.svg";
import iconNODO from "../../assets/iconos/iconNODO.svg";
import iconCUAD from "../../assets/iconos/iconCUAD.svg";


import clinicaI from "../../assets/Clientes/clinicaInternacional.png";
import bbva from "../../assets/Clientes/bbva.png";
import plusPetrol from "../../assets/Clientes/pluspetrol.png";
import sanPablo from "../../assets/Clientes/clinicaSP.png";
import essalud from "../../assets/Clientes/essalud.png";
import universidadNW from "../../assets/Clientes/uNorbertWiener.png";
import inpe from "../../assets/Clientes/inpe.png";
import inabif from "../../assets/Clientes/inabif.png";
