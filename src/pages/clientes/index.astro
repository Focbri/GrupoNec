            <img src={universidadNW.src} alt="HP" class="border hover:shadow-2xl rounded-lg lg:grayscale grayscale-0 lg:hover:grayscale-0"/>
            <img src={inpe.src} alt="HP" class="border hover:shadow-2xl rounded-lg lg:grayscale grayscale-0 lg:hover:grayscale-0"/>
            <img src={inabif.src} alt="HP" class="border hover:shadow-2xl rounded-lg lg:grayscale grayscale-0 lg:hover:grayscale-0"/>
            <img src={ibm.src} alt="HP" class="border hover:shadow-2xl rounded-lg lg:grayscale grayscale-0 lg:hover:grayscale-0"/>
            <img src={pnp.src} alt="HP" class="border hover:shadow-2xl rounded-lg lg:grayscale grayscale-0 lg:hover:grayscale-0"/>
