                    </div>
                </div>
            </div>
            <div class="flex flex-col items-center justify-center gap-4 lg:w-[45%] w-full p-4">
                <div class="text-center">
                  <h2 class="uppercase text-[#1579BD] lg:text-5xl text-3xl font-bold">Contáctanos</h2>
                </div>
                <div class="lg:w-[75%] w-full">
                  <!-- Formulario de contacto -->
                  <form id="contactForm" class="text-[#000] text-center flex flex-col gap-2">
                    <input type="text" id="nombre" name="nombre" placeholder="Escribe tu nombre y apellido" class="p-2 border rounded-lg text-left focus:outline-none focus:border-[#00bbbc] focus:ring-2 focus:ring-[#00bbbc]" required>
                    <input type="tel" id="telefono" name="telefono" placeholder="Ingresa tu número de contacto" class="p-2 border rounded-lg text-left focus:outline-none focus:border-[#00bbbc] focus:ring-2 focus:ring-[#00bbbc]" required>
                    <input type="email" id="correo" name="correo" placeholder="Déjanos tu correo electrónico" class="p-2 border rounded-lg text-left focus:outline-none focus:border-[#00bbbc] focus:ring-2 focus:ring-[#00bbbc]" required>
                    <textarea id="mensaje" name="mensaje" placeholder="Ingresa tu consulta" class="p-2 border rounded-lg resize-none text-left focus:outline-none focus:border-[#00bbbc] focus:ring-2 focus:ring-[#00bbbc]" rows="5" cols="20" required></textarea>
                    <div class="flex justify-center items-center w-full">
                        <input type="submit" class="bg-[#00bbbc] text-[#fff] transition-transform duration-300 ease-in-out transform hover:scale-105 hover:cursor-pointer font-bold text-lg border border-[#00bbbc] rounded-lg lg:py-2 py-2 lg:w-[50%] w-2/5" value="Enviar">
                    </div>
                </form>
                  <!-- Contenedor de notificación -->
                  <div id="notification" class="hidden fixed top-10 left-1/2 transform -translate-x-1/2 p-4 border rounded-md shadow-lg bg-gray-100">
                    <p id="notificationMessage" class="text-center"></p>
                  </div>
                </div>
            </div>
        </div>
        <div class="w-full flex flex-col gap-6 lg:p-4">
            <h2 class="lg:text-5xl text-3xl text-[#fff] border-b lg:w-[20%]">Ubícanos</h2>
            <a href="https://maps.app.goo.gl/CVHT3TS8spTQZDh99" target="_blank" class="w-full flex justify-center transition-transform duration-300 ease-in-out transform hover:scale-105">
                <img src={mapaGN.src} alt="" class="rounded-lg lg:w-[90%] w-full">
            </a>
        </div>
    </div>
  </main>
</Layout>
<script is:inline>
    document.addEventListener("DOMContentLoaded", () => {
      const form = document.getElementById("contactForm");
      const notification = document.getElementById("notification");
      const notificationMessage = document.getElementById("notificationMessage");
  
      form.addEventListener("submit", async function (event) {
        event.preventDefault();
  
        const formData = new FormData(form);
  
        try {
          const response = await fetch("/contacto/formulario.php", {
            method: "POST",
            body: formData,
          });
  
          if (response.ok) {
            notificationMessage.textContent = "¡Mensaje enviado con éxito!";
            notification.classList.remove("hidden");
            notification.classList.add("bg-green-200", "text-green-800");
          } else {
            notificationMessage.textContent = "Hubo un problema al enviar tu mensaje. Intenta de nuevo más tarde.";
            notification.classList.remove("hidden");
            notification.classList.add("bg-red-200", "text-red-800");
          }
        } catch (error) {
          notificationMessage.textContent = "Error en el envío del formulario.";
          notification.classList.remove("hidden");
          notification.classList.add("bg-red-200", "text-red-800");
        }
  
        setTimeout(() => {
          notification.classList.add("hidden"); // Ocultar la notificación después de 5 segundos
        }, 5000);
      });
    });
  </script>
  
  